<div class="article section">
  <div class="header">
    <h2 class="title"><%= @entry.title %></h2>
  </div>

  <div class="body">
    <%= @entry.long_body.html_safe %>
  </div>

  <ul class="info">
    <% unless @entry.category.nil? %>
      <span style="float:left; margin-right: 5px;">category:</span>
      <li class="category"><a href="<%= url(@entry.category.link) %>"><%= @entry.category.title %></a></li>
    <% end %>
    <% if @entry.tags.present? %>
      <span style="float:left; margin-right: 5px;">tags:</span>
      <li class="tags"><%= @entry.tags_to_html %></li>
    <% end %>
    <br class="clear_fix">
  </ul>

  <div class="footer">
    <% if @entry.created_at.present?%>
      <div class="created_at"><%= l(@entry.created_at, format: :long) %></div>
    <% end %>
    <% if logged_in? && @entry.id %>
      <p><a href="<%= url(@entry.edit_link) %>"><%= t('edit') %></a></p>
    <% end %>
  </div>
</div>
