<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <meta content="text/css" http-equiv="Content-Style-Type" />
    <meta content="text/javascript" http-equiv="Content-Script-Type" />
<% if entry? %>
    <title><%= @entry.title %> - <%= @site.title %></title>
<% else %>
    <title><%= @site.title %></title>
<% end %>
    <meta name="description" content="<%= @site.meta_description %>" />
    <meta name="keywords" content="<%= @site.meta_keywords %>" />
    <link rel="shortcut icon" href="<%= @theme.path %>/favicon.ico" />
    <link rel="alternate" href="<%= url('/index.atom') %>" type="application/atom+xml" />
    <link rel="stylesheet" href="<%= "#{@theme.path}/style.css" %>" type="text/css" />
    <%= header %>
  </head>
  <body class="<%= slugs.join(' ') %>" style="">
    <div id="header">
      <h1><%= link_to @site.title, url('/') %></h1>
      <div class="section">
        <div class="nav site_link" >
          <ul class="links">
            <li><%= link_to 'Github', 'http://github.com/jiikko' %></li>
            <li><%= link_to 'Twitter', 'http://twitter.com/jiikko' %></li>
          </ul>
          <p style="clear:both"></p>
        </div>
      </div>
    </div>
    <div id="container">
      <div id="main" >
        <%= yield %>
        <hr>
      </div>
    </div>

    <div id="footer">
      <p id="copy"><%= link_to 'Â©jiikko.com', 'http://docs.jiikko.com' %></p>
    </div>
    <%= footer %>
  </body>
</html>
